{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Main Process",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/watch.js",
      "autoAttachChildProcesses": true,
      "outputCapture": "std",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Main Process (Mock Hardware)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/scripts/watch.js",
      "autoAttachChildProcesses": true,
      "outputCapture": "std",
      "env": {
        "VEET_MOCK_HARDWARE": "true"
      }
    }
  ]
}
